<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="product_template_cost_price_tree_view">
        <field name="name">product.template.price.tree</field>
        <field name="model">product.template</field>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <tree string="Product" multi_edit="1">
                <field name="currency_id" invisible="1" />
                <field name="cost_currency_id" invisible="1" />

                <field name="name" string="Product Name" readonly="1" />
                <field name="default_code" readonly="1" optional="show" />
                <field
                    name="company_id"
                    options="{'no_create': True}"
                    groups="base.group_multi_company"
                    optional="hide"
                />
                <field
                    name="list_price"
                    string="Sales Price"
                    widget="monetary"
                    options="{'currency_field': 'currency_id'}"
                    optional="show"
                />
                <field name="list_price_write_date" optional="show" />
                <field
                    name="standard_price"
                    widget="monetary"
                    options="{'currency_field': 'cost_currency_id'}"
                    optional="show"
                />
                <field name="standard_price_write_date" optional="show" />
                <field name="last_purchase_price" optional="show" />
                <field name="last_purchase_date" optional="show" />
                <field name="last_purchase_supplier_id" optional="show" />
            </tree>
        </field>
    </record>
</odoo>

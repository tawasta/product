<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_translation_form" model="ir.ui.view">
        <field name="name">Translation form product</field>
        <field name="model">ir.translation</field>
        <field name="inherit_id" ref="base.view_translation_form" />
        <field name="arch" type="xml">
            <field name="res_id" position="after">
                <field
                    name="product_template_id"
                    attrs="{'invisible': [('product_template_id', '=', False)]}"
                />
            </field>
        </field>
    </record>

    <record id="action_product_translations" model="ir.actions.act_window">
        <field name="name">Translations</field>
        <field name="res_model">ir.translation</field>
        <field name="view_mode">tree,form</field>
        <field
            name="domain"
        >['&amp;','&amp;','&amp;',('name', 'in', ['ir.ui.view,arch_db', 'product.template,name']),('type', 'in', ['model', 'model_terms']), ('src', '!=', ''), ('product_template_id', '!=', False)]</field>
        <field name="context">{}</field>
        <field name="view_id" ref="base.view_translation_tree" />
    </record>

    <menuitem
        id="product_translations"
        name="Translations"
        action="action_product_translations"
        parent="stock.menu_stock_root"
    />
</odoo>

<odoo>
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">only.select.origin.product.template.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product_harmonized_system.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin_country_id']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True}</attribute>
        </xpath>
        </field>
    </record>
</odoo>

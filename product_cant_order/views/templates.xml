<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template
        name="Suggested products list"
        id="suggested_products_list"
        inherit_id="website_sale.suggested_products_list"
    >
        <xpath
            expr="//a[@class='btn btn-link js_add_suggested_products']"
            position="replace"
        >
            <t t-if="not product.can_not_order">
                <a role="button" class="btn btn-link js_add_suggested_products">
                    <strong>Add to Cart</strong>
                </a>
            </t>
        </xpath>
    </template>

    <template id="assets_frontend" inherit_id="web.assets_frontend">
        <xpath expr="." position="inside">
            <script
                type="text/javascript"
                src="/product_cant_order/static/src/js/product_cart.js"
            />
        </xpath>
    </template>
</odoo>

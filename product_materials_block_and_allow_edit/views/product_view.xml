<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_normal_form_view" model="ir.ui.view">
        <field name="name">product.product.form.product.materials.allow.edit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <group id="material_compositions" position="before">
                <group
                    id="allow_edit"
                    groups="product_materials_block_and_allow_edit.allow_material_edit"
                >
                    <field name="allow_material_edit" widget="boolean_toggle" />
                </group>
            </group>
        </field>
    </record>
</odoo>

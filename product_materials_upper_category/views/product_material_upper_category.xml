<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_product_material_upper_category_tree" model="ir.ui.view">
        <field name="name">product.material.upper.category.tree</field>
        <field name="model">product.material.upper.category</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <tree string="Product Material upper category">
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="view_product_material_upper_category_form" model="ir.ui.view">
        <field name="name">product.material.upper.category.form</field>
        <field name="model">product.material.upper.category</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <form string="Product Material Upper Category">
                <sheet>
                    <div class="oe_title">
                        <label class="oe_edit_only" for="name" />
                        <h1>
                            <field name="name" placeholder="Category name..." />
                        </h1>
                    </div>

                    <group name="product_material_category_group">
                        <field name="product_material_composition_ids" readonly="1">
                            <tree>
                                <field name="product_product_id" />
                                <field name="product_material_class_id" />
                                <field name="product_material_id" />
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="product_material_category_action" model="ir.actions.act_window">
        <field name="name">Product Material Upper Categories</field>
        <field name="res_model">product.material.upper.category</field>
        <field name="view_mode">form,tree</field>
        <field name="view_id" ref="view_product_material_upper_category_tree" />
    </record>

    <menuitem
        id="menu_product_material_upper_category"
        parent="stock.menu_product_in_config_stock"
        sequence="40"
        action="product_material_category_action"
        groups="product_materials.group_product_product_manage_material_hierarchy"
    />
</odoo>

<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.form.hide.pricelist</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='pricelists']" position="attributes">
                <attribute name="groups"></attribute>
            </xpath>

            <xpath expr="//div[@name='pricelist_item']" position="attributes">
                <attribute name="groups"></attribute>
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='item_ids']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>

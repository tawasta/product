<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_product_material_composition_tree" model="ir.ui.view">
        <field name="name">product.material.composition.tree</field>
        <field name="model">product.material.composition</field>
        <field name="arch" type="xml">
            <tree string="Product Material Composition">
                <field name="product_product_id"/>
                <field name="name"/>
                <field name="product_material_class_id"/>
                <field name="product_material_id"/>
                <field name="product_material_sublevel_id"/>
                <field name="net_weight"/>
                <field name="net_weight_uom_id"/>
                <field name="recycled_percentage"/>
                <field name="product_material_waste_component_id"/>
                <field name="product_material_waste_endpoint_id"/>
                <field name="description"/>
                <field name="type"/>
            </tree>
        </field>
    </record>

    <!-- Add this record to the action where you want the tree view to appear -->
    <record id="action_product_material_composition" model="ir.actions.act_window">
        <field name="name">Product Material Composition</field>
        <field name="res_model">product.material.composition</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_product_material_composition_tree"/>
    </record>

    <menuitem
        id="menu_product_material_composition"
        parent="stock.menu_product_in_config_stock"
        sequence="30"
        action="action_product_material_composition"
    />
</odoo>

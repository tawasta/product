<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_product_material_tree" model="ir.ui.view">
        <field name="name">product.material.tree</field>
        <field name="model">product.material</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <tree string="Material info" multi_edit="1">
                <field name="name" />
                <field name="product_material_class" options="{ 'no_create': True }" />
                <field
                    name="is_product_material"
                    groups="product_materials.group_product_template_manage_product_materials"
                />
                <field
                    name="is_product_packaging_material"
                    groups="product_materials.group_product_template_manage_product_packaging_materials"
                />
                <field name="description" />
            </tree>
        </field>
    </record>

    <record id="view_product_material_form" model="ir.ui.view">
        <field name="name">product.material.form</field>
        <field name="model">product.material</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <form string="Material info">
                <sheet>

                    <div class="oe_title">
                        <label class="oe_edit_only" for="name" string="Material Name" />
                        <h1>
                            <field name="name" placeholder="Material Name" />
                        </h1>
                        <div name="options">
                            <div
                                groups="product_materials.group_product_template_manage_product_materials"
                            >
                                <field name="is_product_material" />
                                <label for="is_product_material" />
                            </div>
                            <div
                                groups="product_materials.group_product_template_manage_product_packaging_materials"
                            >
                                <field name="is_product_packaging_material" />
                                <label for="is_product_packaging_material" />
                            </div>
                        </div>

                        <group name="product_material_class_group">
                            <field
                                name="product_material_class"
                                options="{ 'no_create': True }"
                            />
                        </group>

                    </div>
                    <notebook>
                        <page
                            string="Product Material Info"
                            name="product_material_info"
                        >
                            <field name="description" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="product_material_action" model="ir.actions.act_window">
        <field name="name">Product Materials</field>
        <field name="res_model">product.material</field>
        <field name="view_mode">form,tree</field>
        <field name="view_id" ref="view_product_material_tree" />
    </record>

    <menuitem
        id="menu_product_material"
        parent="stock.menu_product_in_config_stock"
        sequence="30"
        action="product_material_action"
    />
</odoo>

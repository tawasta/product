<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_product_material_tree" model="ir.ui.view">
        <field name="name">product.material.tree</field>
        <field name="model">product.material</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <tree string="Material info">
                <field name="name" />
                <field name="material_info" />
            </tree>
        </field>
    </record>

    <record id="view_product_material_form" model="ir.ui.view">
        <field name="name">product.material.form</field>
        <field name="model">product.material</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <form string="Material info">
                <sheet>
                    <group name="product_material_group">
                        <field name="name" />
                        <field name="material_info" />
                    </group>
                </sheet>
                <div class="oe_chatter" />
            </form>
        </field>
    </record>

    <record id="product_material_action" model="ir.actions.act_window">
        <field name="name">Material Info</field>
        <field name="res_model">product.material</field>
        <field name="view_mode">form,tree</field>
        <field name="view_id" ref="view_product_material_tree" />
    </record>

    <menuitem
        id="menu_product_material"
        parent="stock.menu_product_in_config_stock"
        sequence="30"
        action="product_material_action"
    />
</odoo>

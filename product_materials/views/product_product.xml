<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.form.material</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath
                expr="//page[@name='general_information']//field[@name='company_id']"
                position="after"
            >
                <field name="material" widget="many2many_tags" />
            </xpath>
            <xpath
                expr="//group[@name='inventory']"
                position="after"
            >
                <label for="material_purchase"/>
                <div class="o_row" name="material_purchase">
                    <field name="material_purchase" widget="many2many_tags" domain="[('category','=','purchase')]" string="Material"/>
                </div>
                
            </xpath>
        </field>
    </record>
</odoo>

<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_product_material_sublevel_tree" model="ir.ui.view">
        <field name="name">product.material.sublevel.tree</field>
        <field name="model">product.material.sublevel</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <tree string="Product Material Sublevel info">
                <field name="name" />
                <field name="product_material_id" />
                <field name="product_material_class_id" />
                <field name="description" />
            </tree>
        </field>
    </record>

    <record id="view_product_material_sublevel_form" model="ir.ui.view">
        <field name="name">product.material.sublevel.form</field>
        <field name="model">product.material.sublevel</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <form string="Product Material Sublevel Info">
                <sheet>

                    <div class="oe_title">
                        <label
                            class="oe_edit_only"
                            for="name"
                            string="Material Sublevel Name"
                        />
                        <h1>
                            <field name="name" placeholder="Material Name" />
                        </h1>
                    </div>

                    <group name="product_material_group">
                        <field
                            name="product_material_id"
                            options="{ 'no_create': True }"
                        />
                        <field name="product_material_class_id" readonly="1" />
                    </group>

                    <notebook>
                        <page
                            string="Product Material Sublevel Info"
                            name="material_sublevel_info"
                        >
                            <field name="description" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="product_material_sublevel_action" model="ir.actions.act_window">
        <field name="name">Product Material Sublevels</field>
        <field name="res_model">product.material.sublevel</field>
        <field name="view_mode">form,tree</field>
        <field name="view_id" ref="view_product_material_sublevel_tree" />
    </record>

    <menuitem
        id="menu_product_material_sublevel"
        parent="stock.menu_product_in_config_stock"
        sequence="31"
        action="product_material_sublevel_action"
        groups="product_materials.group_product_product_manage_material_hierarchy"
    />
</odoo>

<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_product_material_waste_endpoint_tree" model="ir.ui.view">
        <field name="name">product.material.waste.endpoint.tree</field>
        <field name="model">product.material.waste.endpoint</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <tree string="Product Material Waste endpoint info">
                <field name="name" />
                <field name="description" />
            </tree>
        </field>
    </record>

    <record id="view_product_material_waste_endpoint_form" model="ir.ui.view">
        <field name="name">product.material.waste.endpoint.form</field>
        <field name="model">product.material.waste.endpoint</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <form string="Waste Endpoint Info">
                <sheet>

                    <div class="oe_title">
                        <label
                            class="oe_edit_only"
                            for="name"
                            string="Product Material Waste Endpoint Name"
                        />
                        <h1>
                            <field
                                name="name"
                                placeholder="Product Material Waste Endpoint Name"
                            />
                        </h1>
                    </div>

                    <notebook>
                        <page
                            string="Product Material Waste Endpoint Info"
                            name="waste_endpoint_info"
                        >
                            <field name="description" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="product_material_waste_endpoint_action" model="ir.actions.act_window">
        <field name="name">Product Material Waste Endpoints</field>
        <field name="res_model">product.material.waste.endpoint</field>
        <field name="view_mode">form,tree</field>
        <field name="view_id" ref="view_product_material_waste_endpoint_tree" />
    </record>

    <menuitem
        id="menu_product_material_waste_endpoint"
        parent="stock.menu_product_in_config_stock"
        sequence="33"
        action="product_material_waste_endpoint_action"
        groups="product_materials.group_product_product_manage_materials_waste"
    />
</odoo>

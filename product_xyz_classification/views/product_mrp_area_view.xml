<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_mrp_area_form" model="ir.ui.view">
        <field name="name">product.mrp.area.form.xyz.fields</field>
        <field name="model">product.mrp.area</field>
        <field name="inherit_id" ref="mrp_multi_level.product_mrp_area_form" />
        <field name="priority" eval="50" />
        <field name="arch" type="xml">
            <field name="location_proc_id" position="after">
                <field name="xyz_classification_id" />
            </field>
        </field>
    </record>

    <record id="product_mrp_area_tree" model="ir.ui.view">
        <field name="name">product.mrp.area.tree.xyz</field>
        <field name="model">product.mrp.area</field>
        <field name="inherit_id" ref="mrp_multi_level.product_mrp_area_tree" />
        <field name="arch" type="xml">
            <field name="mrp_verified" position="after">
                <field name="xyz_classification_id" optional="hide" />
            </field>
        </field>
    </record>

    <record id="product_mrp_area_search" model="ir.ui.view">
        <field name="name">product.mrp.area.search.xyz</field>
        <field name="model">product.mrp.area</field>
        <field name="inherit_id" ref="mrp_multi_level.product_mrp_area_search" />
        <field name="arch" type="xml">
            <field name="mrp_area_id" position="after">
                <field name="xyz_classification_id" />
            </field>
        </field>
    </record>
</odoo>

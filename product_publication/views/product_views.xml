<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="publication_product_only_form_view">
        <field name="name">publication.product.template.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <field name="barcode" position="after">
                <field name="is_publication_product" />
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="publication_product_template_form_view">
        <field name="name">publication.product.template.common.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <page name="purchase" position="before">
                <field name="is_publication_product" invisible="1" />
                <page string="Publication Product" name="publication_product" attrs="{'invisible': [('is_publication_product','=',False)]}">
                    <group name="publication_product">
                        <group name="attributes" string="Attributes">
                            <field name="publication_isbn" />
                            <field name="publication_authors" />
                            <field name="publication_publisher" />
                            <field name="publication_publishing_year" />
                            <field name="publication_binding_form" />
                            <field name="publication_edition" />
                            <field name="publication_size" />
                            <field name="publication_breadth" />
                            <field name="publication_quantity" />
                            <field name="publication_duration" widget="float_time" />
                        </group>
                    </group>
                </page>
            </page>
        </field>
    </record>
</odoo>

<?xml version="1.0" ?>
<odoo>
    <record model="ir.ui.view" id="product_quality_instruction_product_template_form">
        <field name="name">product.quality.instruction.product.template.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">

            <notebook position="inside">
                <page string="Quality Instructions">
                    <field name="quality_instruction_ids">
                        <tree>
                            <field name="name" />
                            <field name="type" />
                            <field name="active" />
                        </tree>
                    </field>
                </page>
            </notebook>

        </field>
    </record>
</odoo>

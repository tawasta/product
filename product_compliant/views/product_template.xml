<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Compliance fields are only shown on the template views (not on variant views) -->
    <record id="product_template_only_form_view" model="ir.ui.view">
        <field name="name">product.template.form.product.compliant</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Product Compliance" name="product_compliance">
                    <group name="group_general">
                        <field
                            name="atex_compliant"
                            options="{'no_create': True, 'no_open': True}"
                            groups="product_compliant.group_product_template_manage_compliance_atex"
                        />

                        <field
                            name="reach_compliant"
                            options="{'no_create': True, 'no_open': True}"
                            groups="product_compliant.group_product_template_manage_compliance_reach"
                        />

                        <field
                            name="rohs_compliant"
                            options="{'no_create': True, 'no_open': True}"
                            groups="product_compliant.group_product_template_manage_compliance_rohs"
                        />

                        <field
                            name="composition_checked_compliant"
                            options="{'no_create': True, 'no_open': True}"
                            groups="product_compliant.group_product_template_manage_compliance_composition_checked"
                        />

                        <field
                            name="msds_checked_compliant"
                            options="{'no_create': True, 'no_open': True}"
                            groups="product_compliant.group_product_template_manage_compliance_msds_checked"
                        />

                        <field
                            name="work_safety_checked_compliant"
                            options="{'no_create': True, 'no_open': True}"
                            groups="product_compliant.group_product_template_manage_compliance_work_safety_checked"
                        />
                    </group>
                </page>
            </notebook>
        </field>
    </record>

    <record id="product_template_tree_view" model="ir.ui.view">
        <field name="name">product.template.tree.product.compliant</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view" />
        <field name="arch" type="xml">
            <field name="uom_id" position="after">
                <field
                    name="atex_compliant"
                    optional="hide"
                    groups="product_compliant.group_product_template_manage_compliance_atex"
                />

                <field
                    name="reach_compliant"
                    optional="hide"
                    groups="product_compliant.group_product_template_manage_compliance_reach"
                />

                <field
                    name="rohs_compliant"
                    optional="hide"
                    groups="product_compliant.group_product_template_manage_compliance_rohs"
                />

                <field
                    name="composition_checked_compliant"
                    optional="hide"
                    groups="product_compliant.group_product_template_manage_compliance_composition_checked"
                />

                <field
                    name="msds_checked_compliant"
                    optional="hide"
                    groups="product_compliant.group_product_template_manage_compliance_msds_checked"
                />

                <field
                    name="work_safety_checked_compliant"
                    optional="hide"
                    groups="product_compliant.group_product_template_manage_compliance_work_safety_checked"
                />
            </field>
        </field>
    </record>
</odoo>

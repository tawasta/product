<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_template_only_form_view" model="ir.ui.view">
        <field name="name">product.template.product.form.atex</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <field name="barcode" position="after">
                <field name="atex_compliant" options="{'no_create': True}"/>
                <field name="reach_compliant" options="{'no_create': True}"/>
                <field name="rohs_compliant"  options="{'no_create': True}"/>
            </field>
        </field>
    </record>
    <record id="product_template_tree_view" model="ir.ui.view">
        <field name="name">product.template.product.tree.atex</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view" />
        <field name="arch" type="xml">
            <field name="barcode" position="after">
                <field name="atex_compliant" optional="hide" />
                <field name="reach_compliant" optional="hide" />
                <field name="rohs_compliant" optional="hide" />
            </field>
        </field>
    </record>
    <record id="product_normal_form_view" model="ir.ui.view">
        <field name="name">product.product.form.atex</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <field name="barcode" position="after">
                <field name="atex_compliant" readonly="1" />
                <field name="reach_compliant" readonly="1" />
                <field name="rohs_compliant" readonly="1" />
            </field>
        </field>
    </record>
    <record id="product_product_tree_view" model="ir.ui.view">
        <field name="name">product.product.tree.atex</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view" />
        <field name="arch" type="xml">
            <field name="barcode" position="after">
                <field name="atex_compliant" optional="hide" readonly="1" />
                <field name="reach_compliant" optional="hide" readonly="1" />
                <field name="rohs_compliant" optional="hide" readonly="1" />
            </field>
        </field>
    </record>
</odoo>

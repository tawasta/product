<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.product.compliance</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="product.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='product_general_settings']" position="after">
                    <h2>Product Compliance Types</h2>
                    <div class="row mt16 o_settings_container" id="product_compliance_settings">

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="group_product_template_manage_compliance_atex" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="group_product_template_manage_compliance_atex" />
                                <div class="text-muted">Check box to show 'ATEX Compliant' status selection field on product page.</div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="group_product_template_manage_compliance_reach" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="group_product_template_manage_compliance_reach" />
                                <div class="text-muted">Check box to show 'Reach Compliant' status selection field on product page.</div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="group_product_template_manage_compliance_rohs" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="group_product_template_manage_compliance_rohs" />
                                <div class="text-muted">Check box to show 'RoHS Compliant' status selection field on product page.</div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="group_product_template_manage_compliance_composition_checked" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="group_product_template_manage_compliance_composition_checked" />
                                <div class="text-muted">Check box to show 'Composition Checked' status selection field on product page.</div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="group_product_template_manage_compliance_msds_checked" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="group_product_template_manage_compliance_msds_checked" />
                                <div class="text-muted">Check box to show 'MSDS (Material Safety Data Sheet) Checked' status selection field on product page.</div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="group_product_template_manage_compliance_work_safety_checked" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="group_product_template_manage_compliance_work_safety_checked" />
                                <div class="text-muted">Check box to show 'Work Safety Checked' status selection field on product page.</div>
                            </div>
                        </div>

                        <!-- Add a link to the menu where the yes/no etc. allowed values are managed -->
                        <div class="col-12 col-lg-6 o_setting_box">
                            <button name="product_compliant.action_product_compliant_values" 
                                icon="fa-arrow-right" 
                                type="action" 
                                string="Manage Product Compliance Values" 
                                class="btn-link o_web_settings_access_rights" />
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>

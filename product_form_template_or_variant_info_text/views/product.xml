<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_template_only_form_view" model="ir.ui.view">
        <field
            name="name"
        >product_template_only_form_view.product.form.template.or.variant.info.text</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <div class="alert alert-info" role="alert">
                    Currently viewing Product Template.
                </div>
            </xpath>
        </field>
    </record>


    <record id="product_normal_form_view" model="ir.ui.view">
        <field
            name="name"
        >product_normal_form_view.product.form.template.or.variant.info.text</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <div class="alert alert-info" role="alert">
                    Currently viewing Product Variant.
                </div>
            </xpath>
        </field>
    </record>
</odoo>
